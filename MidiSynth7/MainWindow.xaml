<Window x:Name="window" x:Class="MidiSynth7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MidiSynth7"
        mc:Ignorable="d"
        Title="MIDI Synth v7.0" Height="590" Width="1106" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" Background="#000C0C0C" AllowsTransparency="True" SnapsToDevicePixels="True" Icon="synthico.png" >


    <Border Background="#FF0C0C0C" Margin="12" BorderBrush="#FF0080FF" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#FF6CB5FF" Direction="0" ShadowDepth="0" BlurRadius="12"/>
        </Border.Effect>
        <Grid x:Name="GR_Title" Height="32" VerticalAlignment="Top" PreviewMouseDown="GR_Title_PreviewMouseDown">
            <Border BorderBrush="#FF0080FF" BorderThickness="0,0,0,1" Background="#FF002A83">
                <Grid>
                    <Image Width="24" Height="24" HorizontalAlignment="Left" Source="{Binding Icon, ElementName=window}" Margin="3.5,0,0,0" RenderOptions.BitmapScalingMode="Fant"></Image>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
